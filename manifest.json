{
	"manifest_version": 2,
	"name": "Athletic.net Follower",
	"version": "1.0",
	"description": "Follow athletes on Athletic.net",

	"background":{
		"scripts": ["Scripts/jquery-3.1.1.min.js", "Scripts/background.js"],
		"persistent": true
	},

	"browser_action":{
		"default_title": "Athletic.net Follower",
		"default_popup": "Pages/popup.html",
		"default_icon": "Images/icon.png"
	},
	
	"permissions": ["tabs", "https://www.athletic.net/", "activeTab", "storage"],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	"content_scripts": [{
		"matches": ["*://*.athletic.net/TrackAndField/Athlete.aspx?AID=*", "*://*.athletic.net/CrossCountry/Athlete.aspx?AID=*"],
		"js": ["Scripts/jquery-3.1.1.min.js", "Scripts/content.js"],
		"css": ["Styles/content_style.css"]
	}
	],

	"web_accessible_resources": ["Images/*"],

	"icons": {
		"128": "Images/icon128.png",
		"16": "Images/icon.png"
	}
}

