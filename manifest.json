{
	"manifest_version": 2,
	"name": "Milesplit Follower",
	"version": "1.0",
	"description": "Follow athletes on Milesplit",

	"background":{
		"scripts": ["Scripts/background.js"]
	},

	"browser_action":{
		"default_title": "Milesplit Follower",
		"default_popup": "Pages/popup.html",
		"default_icon": "icon.png"
	},
	
	"permissions": ["tabs", "https://www.milesplit.com/", "activeTab", "storage"],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	"content_scripts": [{
		"matches": ["*://*.milesplit.com/athletes/*"],

		"exclude_matches": ["*://*.milesplit.com/athletes", "*://*.milesplit.com/athletes/", "*://*.milesplit.com/athletes/*/photos", "*://*.milesplit.com/athletes/*/progression", "*://*.milesplit.com/athletes/*/videos", "*://*.milesplit.com/athletes/*/articles"],
		"js": ["Scripts/content.js"],
		"css": ["Styles/content_style.css"]
	}
	]
}
